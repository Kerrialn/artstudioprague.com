<!doctype html>
<html lang="en">
<head>
    <title>{% block title %}martinnewham.art{% endblock %}</title>

    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <meta name="description"
          content="martinnewham.art offers large, affordable artworks by Martin Viktor, ideal for offices, hotels, restaurants, and private homes. Unique mixed media paintings with freestyle gilding create dynamic, light-responsive effects. Commissions available with a six-week delivery time."/>
    <meta name="keywords"
          content="Commercial art, large artworks, affordable art, office art, hotel art, restaurant decor, mixed media paintings, gilded art, Martin Viktor, Prague artist, commissioned artwork, modern art, unique paintings, contemporary art, martinnewham.art"/>

    <meta property="og:title" content="martinnewham.art – Commercial Spaces Artworks"/>
    <meta property="og:description"
          content="Explore striking large-scale artworks by Martin Viktor, blending mixed media and freestyle gilding. Perfect for offices, hotels, and private collections. Commission your custom piece today."/>
    <meta property="og:image" content="{{ asset('/images/visionary-exhibition-east.jpg') }}"/>
    <meta property="og:url" content="https://martinnewham.art"/>
    <meta property="og:type" content="website"/>

    <meta name="twitter:card" content="summary_large_image"/>
    <meta name="twitter:title" content="martinnewham.art – Commercial Spaces Artworks"/>
    <meta name="twitter:description"
          content="Discover large, mixed media artworks by Martin Viktor. Ideal for commercial spaces and private collections. Commission your custom piece today."/>
    <meta name="twitter:image" content="{{ asset('/images/visionary-exhibition-east.jpg') }}"/>
    <!-- Bootstrap CSS -->

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/main.css') }}">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
              crossorigin="anonymous">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    {% endblock %}

    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
                crossorigin="anonymous"></script>
        <script async src="https://www.googletagmanager.com/gtag/js?id=UA-170477392-1"></script>
        <script>
            window.dataLayer = window.dataLayer || [];

            function gtag() {
                dataLayer.push(arguments);
            }

            gtag('js', new Date());

            gtag('config', 'UA-170477392-1');
        </script>
    {% endblock %}
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-light">
    <div class="container my-5">
        <a class="text-decoration-none" href="{{ path('homepage') }}">
            <div class="nunito-light text-black fs-1 lh-1">martinnewham.art</div>
        </a>
        <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <i class="bi bi-three-dots-vertical fs-1"></i>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav gap-4">
                <li class="nav-item">
                    <a class="nav-link {{ app.request.attributes.get('_route') == 'homepage' ? 'text-black' : 'text-muted' }} fs-5"
                       aria-current="page" href="{{ path('homepage') }}">{{ 'gallery'|trans|title }}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {{ app.request.attributes.get('_route') == 'purchase' ? 'text-black' : 'text-muted' }}  fs-5"
                       aria-current="page" href="{{ path('purchase') }}">{{ 'purchase'|trans|title }}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {{ app.request.attributes.get('_route') == 'about' ? 'text-black' : 'text-muted' }} fs-5"
                       aria-current="page" href="{{ path('about') }}">{{ 'about'|trans|title }}</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

{% block body %}{% endblock %}


<footer class="container footer">
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            © {{ 'now'|date('Y') }} martinnewham.art
        </div>
    </div>
</footer>

</body>
</html>